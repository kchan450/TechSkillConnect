                <!option value="Intermediate" @(Model.TutorProfile.SkillLevel == "Intermediate" ? "selected" : "")>Intermediate</!option>
                <!option value="Advanced" @(Model.TutorProfile.SkillLevel == "Advanced" ? "selected" : "")>Advanced</!option>
                <!option value="All Levels" @(Model.TutorProfile.SkillLevel == "All Levels" ? "selected" : "")>All Levels</!option>
            </select>
            <label asp-for="TutorProfile.SkillLevel" class="form-label">Skill Level</label>
            <span asp-validation-for="TutorProfile.SkillLevel" class="text-danger"></span>
        </div>

       <!-- Fee Per Session -->
        <div class="form-floating mb-3">
            <select asp-for="TutorProfile.FeePerSession" class="form-control" required>
                <!option value="10" @(Model.TutorProfile.FeePerSession == 10 ? "selected" : "")>10 CAD</!option>
                <!option value="20" @(Model.TutorProfile.FeePerSession == 20 ? "selected" : "")>20 CAD</!option>
