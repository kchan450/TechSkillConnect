        <!-- Country of Birth Dropdown -->
        <div class="form-floating mb-3">
            <select asp-for="Tutor.CountryOfBirth" class="form-control" required>
                <option value="">Select your country</option>
                <option value="USA">United States</option>
                <option value="Canada">Canada</option>
                <option value="UK">United Kingdom</option>
                <option value="Australia">Australia</option>
                <option value="India">India</option>
                <option value="China">China</option>
                <option value="Germany">Germany</option>
                <!-- Add more countries as needed -->
            </select>
            <span asp-validation-for="Tutor.CountryOfBirth" class="text-danger"></span>
        </div>


        <!-- Phone Number -->
        <div class="form-floating mb-3">
            <input asp-for="Tutor.Tutor_phone" class="form-control" placeholder="Phone Number" required />
            <label asp-for="Tutor.Tutor_phone" class="form-label">Phone Number</label>
            <span asp-validation-for="Tutor.Tutor_phone" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-floating mb-3">
            <input asp-for="Tutor.TutorEmail" class="form-control" placeholder="Email Address" required />
            <label asp-for="Tutor.TutorEmail" class="form-label">Email</label>
            <span asp-validation-for="Tutor.TutorEmail" class="text-danger"></span>
        </div>

        <!-- Skills you teach -->
        <div class="form-floating mb-3">
            <select asp-for="TutorProfile.Language" class="form-control" required>
                <!option value="AI" @(Model.TutorProfile.Language == "AI" ? "selected" : "")>AI</!option>
                <!option value="Python" @(Model.TutorProfile.Language == "Python" ? "selected" : "")>Python</!option>
                <!option value="Cloud Computing" @(Model.TutorProfile.Language == "Cloud Computing" ? "selected" : "")>Cloud Computing</!option>
                <!option value="Machine Learning" @(Model.TutorProfile.Language == "Machine Learning" ? "selected" : "")>Machine Learning</!option>
            </select>
            <label asp-for="TutorProfile.Language" class="form-label">Skills you teach</label>
            <span asp-validation-for="TutorProfile.Language" class="text-danger"></span>
        </div>

        <!-- Years of Experience -->
        <div class="form-floating mb-3">
            <select asp-for="TutorProfile.YearsOfExperience" class="form-control" required>
                <option value="0-1">0-1 years</option>
                <option value="2-3">2-3 years</option>
                <option value="4-5">4-5 years</option>
                <option value="6-10">6-10 years</option>
                <option value="10-20">10+ years</option>
            </select>
            <label asp-for="TutorProfile.YearsOfExperience" class="form-label">Years of Experience</label>
            <span asp-validation-for="TutorProfile.YearsOfExperience" class="text-danger"></span>
        </div>

        <!-- Skill Level -->
        <div class="form-floating mb-3">
