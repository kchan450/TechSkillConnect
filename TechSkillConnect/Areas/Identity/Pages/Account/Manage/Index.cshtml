                <!option value="40" @(Model.TutorProfile.FeePerSession == 40 ? "selected" : "")>40 CAD</!option>
                <!option value="50" @(Model.TutorProfile.FeePerSession == 50 ? "selected" : "")>50 CAD</!option>
                <!option value="60" @(Model.TutorProfile.FeePerSession == 60 ? "selected" : "")>60 CAD</!option>
                <!option value="70" @(Model.TutorProfile.FeePerSession == 70 ? "selected" : "")>70 CAD</!option>
                <!option value="80" @(Model.TutorProfile.FeePerSession == 80 ? "selected" : "")>80 CAD</!option>
                <!option value="90" @(Model.TutorProfile.FeePerSession == 90 ? "selected" : "")>90 CAD</!option>
                <!option value="100" @(Model.TutorProfile.FeePerSession == 100 ? "selected" : "")>100 CAD</!option>
            </select>
            <label asp-for="TutorProfile.FeePerSession" class="form-label">Fee Per Session (CAD)</label>
            <span asp-validation-for="TutorProfile.FeePerSession" class="text-danger"></span>
        </div>

        <!-- Self Introduction -->
        <div class="form-floating mb-3">
            <textarea asp-for="TutorProfile.SelfIntro" class="form-control" rows="4" placeholder="Self Introduction" required></textarea>
            <label asp-for="TutorProfile.SelfIntro" class="form-label">Self Introduction</label>
            <span asp-validation-for="TutorProfile.SelfIntro" class="text-danger"></span>
        </div>

        <!-- Self Headline -->
        <div class="form-floating mb-3">
            <input asp-for="TutorProfile.SelfHeadline" class="form-control" placeholder="Self Headline" required />
            <label asp-for="TutorProfile.SelfHeadline" class="form-label">Self Headline</label>
            <span asp-validation-for="TutorProfile.SelfHeadline" class="text-danger"></span>
        </div>

        <!-- Save Button -->
        <div class="form-floating mb-3">
            <button type="submit" class="btn btn-primary w-100">Save</button>
        </div>
    </form>
</div>
