@page
@model TechSkillConnect.Pages.Learnerpage.LearnerProfilePageModel

@{
    ViewData["Title"] = "Learner Profile";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <div class="container my-5">
        <h1 class="mt-4">Your Profile</h1>
        <!-- Profile update form -->
        <form asp-action="LearnerProfile" method="post">
            <div class="mb-3">
                <label for="Learner_firstname" class="form-label">First Name</label>
                <input type="text" class="form-control" id="Learner_firstname" name="Learner_firstname" value="@Model.Learner.Learner_firstname" required />
            </div>

            <div class="mb-3">
                <label for="Learner_lastname" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="Learner_lastname" name="Learner_lastname" value="@Model.Learner.Learner_lastname" required />
            </div>

            <div class="mb-3">
                <label for="LearnerEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="LearnerEmail" name="LearnerEmail" value="@Model.Learner.LearnerEmail" required />
            </div>

          @*   <div class="mb-3">
                <label for="CountryOfBirth" class="form-label">Country of Birth</label>
                <input type="text" class="form-control" id="CountryOfBirth" name="CountryOfBirth" value="@Model.Learner.CountryOfBirth" required />
            </div> *@

            <!-- Country of Birth Dropdown -->
            <div class="field-group mb-3">
                <label for="CountryOfBirth" class="form-label">Country of Birth</label>
                <select id="countryOfBirth" asp-for="LearnerProfile.CountryOfBirth" class="form-control" required>
                    <option value="">Select your country</option>
                    <option value="USA">United States</option>
                    <option value="Canada">Canada</option>
                    <option value="UK">United Kingdom</option>
                    <option value="Australia">Australia</option>
                    <option value="India">India</option>
                    <option value="China">China</option>
                    <option value="Germany">Germany</option>
                    <!-- Add more countries as needed -->
                </select>
                <span asp-validation-for="LearnerProfile.CountryOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Learner_registration_date" class="form-label">Registration Date</label>
                <input type="text" class="form-control" id="Learner_registration_date" name="Learner_registration_date" value="@Model.Learner.Learner_registration_date.ToString("yyyy-MM-dd")" disabled />
            </div>

            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
