@page
@model TechSkillConnect.Pages.Learnerpage.LearnerDashboardModel

@{
    ViewData["Title"] = "Learner Dashboard";
}

<!DOCTYPE html>
<html lang="en">

<body>

    <div class="container my-5">
        <h1 class="mt-4">Welcome to Your Dashboard</h1>
        <p>Here's your dashboard. You can continue your profile creation or update any details.</p>

        <!-- Profile Status Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Profile Status</h5>
                <p class="card-text">Your profile is currently: @Model.ProfileStatus</p>
                @if (Model.ProfileStatus == "Incomplete")
                {
                    <a href="/Learnerpage/LearnerProfileCreate" class="btn btn-warning">Complete Profile</a>
                }
                else
                {
                    <span class="btn btn-success disabled">Profile Completed</span>
                }
            </div>
        </div>

        @if (Model.ProfileStatus != "Incomplete")
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">My Profile</h5>
                    <p class="card-text"></p>
                    <a href="/Learnerpage/learner_profile" class="btn btn-primary mt-4">My Profile</a>
                </div>
            </div>
        }
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Find Tutor</h5>
                <p class="card-text"></p>
                <a href="/Learnerpage/FindMyTutor" class="btn btn-primary mt-4">Find My Tutor</a>

            </div>
        </div>
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">My Connection</h5>
                <p class="card-text"></p>
                <a href="/Learnerpage/MyConnection" class="btn btn-primary mt-4">My Connection</a>

            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
