@page "{id:int}"
@model TechSkillConnect.Pages.Admin.Connections.DeleteModel

@{
    ViewData["Title"] = "Delete Connection";
}

<h1>Delete Connection</h1>

<h3>Are you sure you want to delete this connection?</h3>
<div>
    <h4>Connection Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Connection.ConnectionDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Connection.ConnectionDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Connection.Tutor.TutorEmail)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Connection.Tutor.TutorEmail)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Connection.Learner.LearnerEmail)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Connection.Learner.LearnerEmail)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Connection.ConnectionID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>