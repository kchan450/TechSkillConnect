@page "{id:int}"
@model TechSkillConnect.Pages.Admin.Connections.DetailsModel

@{
    ViewData["Title"] = "Connection Details";
}

<h1>Connection Details</h1>

<div>
    <h4>Connection Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Connection.ConnectionDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Connection.ConnectionDate)</dd>

        <dt class="col-sm-2">Tutor Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Connection.Tutor.TutorEmail)</dd>

        <dt class="col-sm-2">Learner Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Connection.Learner.LearnerEmail)</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Connection.ConnectionID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
