@page "{id:int}"
@model TechSkillConnect.Pages.Admin.Learners.DeleteModel

@{
    ViewData["Title"] = "Delete Learner";
}

<h1>Delete Learner</h1>

<h3>Are you sure you want to delete this learner?</h3>
<div>
    <h4>Learner Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Learner.Learner_firstname)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Learner.Learner_firstname)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Learner.Learner_lastname)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Learner.Learner_lastname)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Learner.LearnerEmail)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Learner.LearnerEmail)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Learner.CountryOfBirth)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Learner.CountryOfBirth)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Learner.Learner_registration_date)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Learner.Learner_registration_date)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Learner.LearnerID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
