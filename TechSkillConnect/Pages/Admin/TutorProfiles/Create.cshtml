@page
@model TechSkillConnect.Pages.Admin.TutorProfiles.CreateModel

@{
    ViewData["Title"] = "Tutor Profile Create";
}

<h1>Tutor Profile Create</h1>

<h4>TutorProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TutorProfile.TutorID" class="control-label"></label>
                <select asp-for="TutorProfile.TutorID" class="form-control" asp-items="ViewBag.TutorID"></select>
            </div>

            <div class="form-group">
                <label asp-for="TutorProfile.Language" class="control-label">Skill</label>
                <select asp-for="TutorProfile.Language" class="form-control" asp-items="Model.SkillOptions"></select>
                <span asp-validation-for="TutorProfile.Language" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TutorProfile.YearsOfExperience" class="control-label"></label>
                <select asp-for="TutorProfile.YearsOfExperience" class="form-control" asp-items="Model.ExperienceOptions"></select>
                <span asp-validation-for="TutorProfile.YearsOfExperience" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TutorProfile.SkillLevel" class="control-label"></label>
                <select asp-for="TutorProfile.SkillLevel" class="form-control" asp-items="Model.SkillLevelOptions"></select>
                <span asp-validation-for="TutorProfile.SkillLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TutorProfile.FeePerSession" class="control-label"></label>
                <select asp-for="TutorProfile.FeePerSession" class="form-control" asp-items="Model.FeeOptions"></select>
                <span asp-validation-for="TutorProfile.FeePerSession" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TutorProfile.SelfIntro" class="control-label"></label>
                <textarea asp-for="TutorProfile.SelfIntro" class="form-control"></textarea>
                <span asp-validation-for="TutorProfile.SelfIntro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TutorProfile.SelfHeadline" class="control-label"></label>
                <input asp-for="TutorProfile.SelfHeadline" class="form-control" />
                <span asp-validation-for="TutorProfile.SelfHeadline" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}