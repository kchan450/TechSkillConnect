@page
@model TechSkillConnect.Pages.Tutorpage.TutorCreatingProfileConfirmModel

@{
    ViewData["Title"] = "Confirmation";
}

<h1>Confirm Your Profile Information</h1>

<p>Please review your information carefully before proceeding to payment.</p>

<div class="section">
    <h3>Account Information</h3>
    <p><strong>Email:</strong> @Model.Tutor.TutorEmail</p>
</div>

<div class="section">
    <h3>Personal Information</h3>
    <p><strong>TutorID:</strong> @Model.Tutor.TutorID</p>
    <p><strong>First Name:</strong> @Model.Tutor.Tutor_firstname</p>
    <p><strong>Last Name:</strong> @Model.Tutor.Tutor_lastname</p>
    <p><strong>Country of Birth:</strong> @Model.Tutor.CountryOfBirth</p>
    <p><strong>Phone Number:</strong> @(Model.Tutor.Tutor_phone ?? "Not provided")</p>
</div>

<div class="section">
    <h3>Tutor Profile Description</h3>
    <p><strong>ProfileID:</strong> @Model.TutorProfile.ProfileID</p>
    <p><strong>Skill You Teach:</strong> @Model.TutorProfile.Language</p>
    <p><strong>Years of Experience:</strong> @Model.TutorProfile.YearsOfExperience years</p>
    <p><strong>Skill Level:</strong> @Model.TutorProfile.SkillLevel</p>
    <p><strong>Fee Per Session:</strong> $@Model.TutorProfile.FeePerSession CAD</p>
    <p><strong>Self Introduction:</strong> @Model.TutorProfile.SelfIntro</p>
    <p><strong>Headline:</strong> @Model.TutorProfile.SelfHeadline</p>
</div>

<div class="section">
    <h3>Teaching Certification</h3>
    <p><strong>Certificate Name:</strong> @(Model.TutorProfile.Certificate ?? "Not provided")</p>
</div>

<div class="fee-box">
    <p>One-Time Registration Fee (for Tutors): <strong>$49.00</strong></p>
    <p>Monthly Subscription Fee (for Tutors): <strong>$19.00</strong></p>
</div>

<div class="button-container">
    <button type="button" class="btn btn-success" onclick="goBack()">Back</button>

    <form method="post" asp-page-handler="Confirm" style="display:inline;">
        <button type="submit" class="btn btn-primary">Confirm and Proceed Payment</button>
    </form>
</div>

@section Scripts {
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}
