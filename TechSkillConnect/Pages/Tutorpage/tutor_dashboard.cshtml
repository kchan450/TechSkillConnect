@page
@model TechSkillConnect.Pages.TutorPage.TutorDashboardModel

@{
    ViewData["Title"] = "Tutor Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tech Skill Connect</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #007bff;">
            <a class="navbar-brand" href="#">TechSkillConnect</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Tutorpage/tutor_creating_profile_combined">Create Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Tutorpage/tutor_creating_profile_confirm">Confirm Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Tutorpage/tutor_creating_first_payment">First Payment</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <h1 class="mt-4">Welcome to Your Dashboard</h1>
        <p>Here's your dashboard. You can continue your profile creation or update any details.</p>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Profile Status</h5>
                <p class="card-text">Your profile is currently: @Model.ProfileStatus</p>
                @if (Model.ProfileStatus == "Incomplete")
                {
                    <a href="/Tutorpage/tutor_creating_profile_combined" class="btn btn-warning">Continue Onboarding</a>
                }
                else
                {
                    <span class="btn btn-success disabled">Profile Completed</span>
                }
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Payment Status</h5>
                <p class="card-text">Your payment status is: @Model.PaymentStatus</p>
                @if (Model.PaymentStatus == "Pending")
                {
                    <a href="/Tutorpage/tutor_creating_profile_first_payment" class="btn btn-primary">Proceed with Payment</a>
                }
                else
                {
                    <span class="btn btn-success disabled">Payment Completed</span>
                }
            </div>
        </div>
        @if (Model.ProfileStatus != "Incomplete")
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">My Profile</h5>
                    <p class="card-text"></p>
                    <a href="/Tutorpage/TutorProfile" class="btn btn-primary mt-4">My Profile</a>
                </div>
            </div>
        }
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">My Student</h5>
                <p class="card-text"></p>
                <a href="/Tutorpage/MyStudent" class="btn btn-primary mt-4">My Student</a>

            </div>
        </div>

    </div>
</body>
</html>
