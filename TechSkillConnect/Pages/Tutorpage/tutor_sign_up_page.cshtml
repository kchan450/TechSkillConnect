@page
@model TechSkillConnect.Pages.Tutorpage.tutor_sign_up_pageModel

@{
    ViewData["Title"] = "Tutor Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutor Sign Up</title>
    <link rel="stylesheet" href="css/learningconnect.style.css">
</head>
<body>
    <header>
        <h1>Tutor Sign Up</h1>
    </header>

    <div class="email-signup-container">
        <form method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" asp-for="TutorSignUp.Tutor_username" placeholder="Enter your username" required>
                <span asp-validation-for="TutorSignUp.Tutor_username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" asp-for="TutorSignUp.TutorPassword" placeholder="Enter your password" required>
                <span asp-validation-for="TutorSignUp.TutorPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" asp-for="TutorSignUp.TutorEmail" placeholder="Enter your email address" required>
                <span asp-validation-for="TutorSignUp.TutorEmail" class="text-danger"></span>
            </div>


                <!-- Checkbox inside label -->

            <label for="termsCheckbox">
                <input type="checkbox" id="termsCheckbox" name="termsCheckbox" required>
            </label>
                <!-- Text kept in a separate div to prevent breaking -->
                <div class="terms-text">
                    I agree to the <a href="terms.html" target="_blank">Learning Connect Terms and Conditions</a>,
                    including <a href="subscription.html" target="_blank">Subscription Terms</a> and
                    <a href="privacy.html" target="_blank">Privacy Policy</a>

                </div>
            <div class="button-container">
                <button type="submit">Create Account</button>
            </div>
        </form>
    </div>

    <div class="login-link">
        <button onclick="location.href='tutor_mainpage_login.html'">Already have an account? Log In</button>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}